{
  "name": "yonbip-devtool",
  "displayName": "YonBIP高级版开发者工具",
  "description": "YonBIP高级版开发者工具集成了MCP服务、数据库连接、OpenAPI测试等功能，帮助开发者更高效地进行YonBIP应用开发",
  "version": "0.4.0",
  "publisher": "zhang-chaocai",
  "author": {
    "name": "YonBIP开发社区",
    "email": "zhangchck@yonyou.com"
  },
  "homepage": "https://github.com/yonbip/vscode-dev-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/yonbip/vscode-dev-tools.git"
  },
  "bugs": {
    "url": "https://github.com/yonbip/vscode-dev-tools/issues"
  },
  "license": "MIT",
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "YonBIP",
    "用友",
    "NCC",
    "MCP",
    "OpenAPI"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "yonbip-view",
          "title": "YonBIP高级版开发者工具",
          "icon": "resources/icons/yonbip-icon.svg"
        }
      ]
    },
    "views": {
      "yonbip-view": [
        {
          "id": "yonbip-test",
          "name": "测试视图",
          "when": "false",
          "type": "webview"
        },
        {
          "id": "yonbip-mcp",
          "name": "MCP服务",
          "icon": "resources/icons/mcp-icon.svg",
          "type": "webview"
        },
        {
          "id": "yonbip-database",
          "name": "数据库连接",
          "icon": "resources/icons/database-icon.svg",
          "type": "webview"
        },
        {
          "id": "yonbip-nchome",
          "name": "NC HOME配置",
          "icon": "resources/icons/nchome-icon.svg",
          "type": "webview"
        },
        {
          "id": "yonbip-openapi",
          "name": "OpenAPI测试",
          "icon": "resources/icons/openapi-icon.svg",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "yonbip.mcp.start",
        "title": "启动MCP服务",
        "category": "YonBIP/MCP"
      },
      {
        "command": "yonbip.mcp.stop",
        "title": "停止MCP服务",
        "category": "YonBIP/MCP"
      },
      {
        "command": "yonbip.mcp.restart",
        "title": "重启MCP服务",
        "category": "YonBIP/MCP"
      },
      {
        "command": "yonbip.mcp.status",
        "title": "查看MCP服务状态",
        "category": "YonBIP/MCP"
      },
      {
        "command": "yonbip.mcp.logs",
        "title": "查看MCP服务日志",
        "category": "YonBIP/MCP"
      },
      {
        "command": "yonbip.database.connect",
        "title": "连接数据库",
        "category": "YonBIP/数据库"
      },
      {
        "command": "yonbip.database.disconnect",
        "title": "断开数据库连接",
        "category": "YonBIP/数据库"
      },
      {
        "command": "yonbip.openapi.test",
        "title": "测试OpenAPI",
        "category": "YonBIP/OpenAPI"
      },
      {
        "command": "yonbip.home.start",
        "title": "启动HOME服务",
        "category": "YonBIP/HOME"
      },
      {
        "command": "yonbip.home.debug",
        "title": "调试启动HOME服务",
        "category": "YonBIP/HOME"
      },
      {
        "command": "yonbip.home.stop",
        "title": "停止HOME服务",
        "category": "YonBIP/HOME"
      },
      {
        "command": "yonbip.home.status",
        "title": "查看HOME服务状态",
        "category": "YonBIP/HOME"
      },
      {
        "command": "yonbip.home.logs",
        "title": "查看HOME服务日志",
        "category": "YonBIP/HOME"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "YonBIP高级版开发者工具",
      "properties": {
        "yonbip.mcp.port": {
          "type": "number",
          "default": 9000,
          "description": "MCP服务端口"
        },
        "yonbip.mcp.debug": {
          "type": "boolean",
          "default": false,
          "description": "是否启用调试模式"
        },
        "yonbip.mcp.debugPort": {
          "type": "number",
          "default": 5005,
          "description": "调试模式端口"
        },
        "yonbip.mcp.homePath": {
          "type": "string",
          "default": "",
          "description": "MCP服务HOME路径"
        },
        "yonbip.homePath": {
          "type": "string",
          "default": "",
          "description": "NC Home目录路径"
        },
        "yonbip.openapi.baseUrl": {
          "type": "string",
          "default": "http://localhost:9000",
          "description": "OpenAPI测试基础URL"
        },
        "yonbip.openapi.headers": {
          "type": "object",
          "default": {},
          "description": "OpenAPI测试默认请求头"
        },
        "yonbip.openapi.timeout": {
          "type": "number",
          "default": 30000,
          "description": "OpenAPI测试请求超时时间(毫秒)"
        }
      }
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "package.json",
      "README.md",
      "CHANGELOG.md"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "iconv-lite": "^0.7.0",
    "node-stream-zip": "^1.15.0",
    "ws": "^8.18.3"
  }
}
